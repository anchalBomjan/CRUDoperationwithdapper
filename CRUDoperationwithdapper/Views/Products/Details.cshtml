@model CRUDoperationwithdapper.Models.ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="text-center mt-4 mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2">Product Name</dt>
                <dd class="col-sm-10">@Model.ProductName</dd>
                <dt class="col-sm-2">Price</dt>
                <dd class="col-sm-10">@Model.Price</dd>
                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.ProductDescription</dd>
                <dt class="col-sm-2">Created On</dt>
                <dd class="col-sm-10">@Model.CreatedOn</dd>
                <dt class="col-sm-2">Updated On</dt>
                <dd class="col-sm-10">@Model.UpdateOn</dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
